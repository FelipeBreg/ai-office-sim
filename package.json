{
  "name": "ai-office-sim",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:worker": "turbo run dev --filter=worker",
    "dev:infra": "docker compose up -d",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @ai-office/db db:generate",
    "db:migrate": "pnpm --filter @ai-office/db db:migrate",
    "db:push": "pnpm --filter @ai-office/db db:push",
    "db:studio": "pnpm --filter @ai-office/db db:studio",
    "db:seed": "pnpm --filter @ai-office/db db:seed"
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "turbo": "^2.8.10"
  }
}
